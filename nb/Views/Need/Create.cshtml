@using System.Collections.Generic
@using System.Web.Mvc
@model nb.Models.Need

<h2>Add a Request</h2>

@using (Html.BeginForm("Create", "Need", FormMethod.Post, new { @class = "form-horizontal"}))
{
	   @Html.AntiForgeryToken() 
 
       <legend>Create New Request</legend>

       <div class="form-group">
           <div>
               @Html.LabelFor(model => model.Name, new {@class = "form-label"})
           </div>
           <div class="editor-field">
               @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder="Name"} })
               @Html.ValidationMessageFor(model => model.Name)
           </div>
		</div>

		<div class="form-group">
           <div>
               @Html.LabelFor(model => model.Location, new {@class = "form-label"})
           </div>
           <div class="editor-field">
		
				@Html.DropDownListFor(model => model.Location.Id, (IEnumerable<SelectListItem>)ViewBag.Locations, new { @class = "form-control"})
           </div>
		</div>

		<div class="form-group text-right">
			<input type="submit" value="Create"  class="btn btn-default"/>
		</div>

}